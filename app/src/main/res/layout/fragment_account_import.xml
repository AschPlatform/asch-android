<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_bg"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:background="@android:color/transparent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:background="@android:color/white"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/secret_key"
                />
            </LinearLayout>
        <EditText
            android:id="@+id/seed_et"
            android:layout_width="match_parent"
            android:layout_height="113dp"
            android:layout_margin="10dp"
            android:background="@drawable/secret_et_bg"
            android:hint="@string/secret_key_hint"
            android:textSize="13sp"
            android:textColor="#333333"
            android:enabled="true"
            android:gravity="top"
            android:padding="8dp"
            android:inputType="textMultiLine"
            android:scrollbars="vertical"
            android:minLines="2"
            android:maxLines="6" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_color"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:background="@android:color/white"
        >
        <EditText
            android:id="@+id/name_et"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:hint="@string/account_hint"
            android:textSize="15sp"
            android:textColor="#333333"
            android:inputType="textPersonName"
            android:maxLines="1" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_color"
            />
    </LinearLayout>
    <LinearLayout
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:orientation="vertical"
        android:gravity="center_vertical"
        >
        <EditText
            android:id="@+id/passwd_et"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:hint="@string/password_input_hint"
            android:textSize="15sp"
            android:textColor="#333333"
            android:inputType="textPassword"
            android:maxLines="1" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_color"
            />
    </LinearLayout>

    <LinearLayout
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:orientation="vertical"
        android:gravity="center_vertical"
        >
        <EditText
            android:id="@+id/passwd_et2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:hint="@string/password_repet"
            android:textSize="15sp"
            android:textColor="#333333"
            android:inputType="textPassword"
            android:maxLines="1" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_color"
            />
    </LinearLayout>
    <LinearLayout
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:orientation="vertical"
        android:gravity="center_vertical"
        >
        <EditText
            android:id="@+id/hint_et"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:hint="@string/password_hint"
            android:textSize="15sp"
            android:textColor="#333333"
            android:inputType="text"
            android:maxLines="1" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_color"
            />
    </LinearLayout>


    <Button
        android:id="@+id/import_btn"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        style="@style/PrimaryButton.Style"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:text="@string/import_account" />
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="13sp"
        android:textColor="#888888"
        android:text="@string/remark_hint"
        />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        >

        <!-- footer -->

    </FrameLayout>
</LinearLayout>
</ScrollView>