<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin">
    <LinearLayout
        android:layout_marginTop="0dp"
        android:layout_marginBottom="36dp"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/account_input_title"
            android:textColor="#333333"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:gravity="center"
            />
    </LinearLayout>



    <EditText
        android:id="@+id/passwd_et"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/dialog_input_bg"
        android:paddingLeft="8dp"
        android:hint="@string/account_input"
        android:inputType="textPassword"
        android:layout_width="230dp"
        android:layout_height="43dp" />

    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/ok_btn"
            android:layout_width="0dp"
            android:background="@drawable/primary_btn_selector"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:text="@string/confirm"
            android:textColor="@color/white"
            android:textSize="13sp"/>

        <Button
            android:id="@+id/cancel_btn"
            android:layout_marginLeft="10dp"
            android:background="@drawable/delete_account_btn_bg"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="@string/cancel"
            android:textColor="#333333"
            android:textSize="13sp"/>
    </LinearLayout>

</LinearLayout>