<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/page_bg"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:id="@+id/tag_backup_info"
        android:text="@string/account_del"
        android:textSize="12sp"
        android:background="@null"
        android:textColor="@color/dark_gray"
        android:layout_alignParentTop="true"
        />


    <EditText
        android:id="@+id/del_mnemonic"
        style="@style/TextLableStyle"
        android:layout_height="150dp"
        android:text=""
        android:layout_below="@id/tag_backup_info"
        android:textSize="12sp"
        android:textColor="@color/dark_gray"
        android:layout_marginTop="10dp"
        />

    <Button
        android:id="@+id/del_next"
        style="@style/PrimaryButton.Style"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height"
        android:layout_marginHorizontal="20dp"
        android:textColor="@color/white"
        android:layout_centerInParent="true"
        android:textSize="@dimen/btn_text_size"
        android:text="@string/next"/>

</RelativeLayout>
