<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/page_bg"
    >
    
    <RelativeLayout
        android:id="@+id/center_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="36dp"
        android:layout_marginLeft="36dp"
        android:background="@color/white"
        >
        <TextView
            android:id="@+id/address_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="18dp"
            android:layout_centerHorizontal="false"
            android:textColor="#333333"
            android:textSize="15sp"
            android:text="收款二维码"
            />

        <TextView
            android:id="@+id/address_tv"
            android:layout_below="@+id/address_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="false"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_centerHorizontal="true"
            android:maxLines="2"
            android:textColor="#333333"
            android:textSize="13sp"
            android:text="xxxx"
            />
        <View
            android:id="@+id/qr_divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/address_tv"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:background="#F3F3F3"/>
        <ImageView
            android:id="@+id/qrcode_iv"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_below="@+id/qr_divider"
            android:layout_marginTop="13.333dp"
            android:layout_centerHorizontal="true"
            android:src="@color/black" />
        <LinearLayout
            android:id="@+id/ammount_ll"
            android:layout_below="@+id/qrcode_iv"
           android:layout_marginTop="33dp"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="36dp"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/ammount_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_below="@+id/qrcode_iv"
                android:layout_centerHorizontal="true"
                android:inputType="numberDecimal"
                android:background="@null"
                android:hint="设置金额"
                android:textColor="#333333"
                android:textSize="13sp"
                android:gravity="center"
                android:text="" />
            <View
                android:layout_width="2dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:background="#333333"
                />
            <TextView
                android:id="@+id/save_btn"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#333333"
                android:textSize="13sp"
                android:text="保存二维码"
                tools:ignore="HardcodedText" />
        </LinearLayout>
    </RelativeLayout>



    <LinearLayout
        android:id="@+id/bottom_bar"
        android:layout_below="@id/center_ll"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/copy_btn"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:text="复制收款地址"
            tools:ignore="HardcodedText" />
    </LinearLayout>
</RelativeLayout>