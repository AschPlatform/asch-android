<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/page_bg"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/close_ll"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_width="32dp"
        android:layout_height="32dp">
        <ImageButton
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/nav_close_icon"
            />
    </LinearLayout>
<LinearLayout
    android:id="@+id/icon_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="120dp"
    android:layout_centerHorizontal="true"
    android:orientation="vertical"
    >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@mipmap/ic_launcher"
        />
    <TextView
        android:layout_marginTop="16.667dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#333333"
        android:textSize="16sp"
        android:text="新账户创建成功"
        android:layout_gravity="center"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/icon_ll"
        android:layout_marginTop="86.667dp"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        >
        <Button
            android:id="@+id/import_btn"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/primary_btn_selector"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:text="备份账户" />
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="200dp"
            android:layout_height="32dp"
            android:textColor="#333333"
            android:textSize="16sp"
            android:gravity="center"
            android:text="如何备份账户"
            android:layout_gravity="center"
            />
    </LinearLayout>

</RelativeLayout>