<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="320dp"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_rect_circle_border"
        android:orientation="vertical">

        <RelativeLayout
            android:background="@drawable/auzhorize_dialog_header_bg"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginBottom="0dp"
            android:padding="0dp">


            <TextView
                android:visibility="gone"
                android:id="@+id/title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/dapp_authorize"
                android:textColor="@color/white"
                android:textSize="18sp" />

        </RelativeLayout>

        <View
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginBottom="0dp"
            android:background="@color/divider_color" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/icon_iv"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@mipmap/icon_cctime"
                />
            <TextView
                android:id="@+id/hint_tv"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="@string/dapp_authorize_alert"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="20dp"
            android:background="@color/divider_color" />
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="0dp"

            >
            <Button
                android:layout_marginLeft="0dp"
                android:layout_weight="1"
                android:id="@+id/ok_btn"
                android:background="@drawable/dialog_bottom_left_bg"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/authorize"
                android:textColor="@color/white"
                android:textSize="13sp" />
            <Button
                android:layout_marginRight="0dp"
                android:layout_weight="1"
                android:id="@+id/cancel_btn"
                android:background="@drawable/dialog_bottom_right_bg"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/cancel"
                android:textColor="#949494"
                android:textSize="13sp" />
        </LinearLayout>




    </LinearLayout>
</LinearLayout>