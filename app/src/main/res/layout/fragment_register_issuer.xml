<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/page_bg"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@color/white">

            <EditText
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:id="@+id/issuer_name_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toStartOf="@+id/issuer_name_count"
                android:layout_toLeftOf="@+id/issuer_name_count"
                android:layout_centerVertical="true"
                android:hint="@string/issuer_name"
                android:inputType="textVisiblePassword"
                android:maxLines="1"
                android:textSize="14sp"
                android:background="@color/white"
                android:paddingLeft="20dp" />

            <TextView
                android:id="@+id/issuer_name_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="0/15"
                android:textSize="12sp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_centerVertical="true"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            android:background="@color/white">

            <EditText
                android:id="@+id/issuer_detail_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:gravity="left|top"
                android:hint="@string/description"
                android:textSize="12sp"
                android:background="@color/white"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"/>

            <TextView
                android:id="@+id/issuer_detail_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="0/255"
                android:textSize="12sp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                />

        </RelativeLayout>


        <Button
            android:id="@+id/register_issuer_btn"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            style="@style/PrimaryButton.Style"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/btn_text_size"
            android:layout_marginTop="150dp"
            android:text="@string/registe_now"/>


        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="10sp"
            android:text="@string/register_issuer_note"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">

        </FrameLayout>
    </LinearLayout>
</ScrollView>
