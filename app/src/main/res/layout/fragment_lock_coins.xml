<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="asch.so.wallet.view.fragment.LockCoinsFragment">

    <TextView

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:background="@null"
        android:gravity="center_vertical"
        android:text="@string/set_lock_msg"
        android:textSize="16sp"
        android:textColor="#333333"/>

    <LinearLayout
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:paddingLeft="19dp"
        android:paddingRight="19dp"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:text="@string/last_height"
                android:textSize="15sp"
                android:textColor="#333333"/>

            <TextView
                android:id="@+id/block_height"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:text="0"
                android:textSize="15sp"
                android:layout_alignParentRight="true"
                android:textColor="#cc3F51B5"/>
        </RelativeLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_color"/>
    <LinearLayout
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:paddingLeft="19dp"
        android:paddingRight="19dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:text="@string/set_amount"
            android:textSize="15sp"
            android:textColor="#333333"/>

        <EditText
            android:id="@+id/lock_amount_et"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:hint="@string/input_amount"
            android:gravity="right|center"
            android:textSize="15sp"
            android:textColor="#333333"
            android:inputType="number"
            android:maxLines="1" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_color"/>
    <LinearLayout
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:paddingLeft="19dp"
        android:paddingRight="19dp"
        android:orientation="horizontal"
        android:gravity="center_vertical|right">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:text="@string/set_date"
            android:textSize="15sp"
            android:textColor="#333333"/>

            <RelativeLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/ll_date_time"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/date_bg"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="0dp"
                    android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_date_time"
                android:text="2018-08-05 10:13:15"
                android:textColor="@color/white"
                android:layout_toLeftOf="@+id/expand_arrow"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_marginRight="1dp"
                android:layout_height="30dp" />

            <TextView
                android:id="@+id/expand_arrow"
                android:gravity="center"
                android:background="@mipmap/expand_arrow_down"
                android:layout_alignParentRight="true"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="3dp"/>
                </LinearLayout>
            </RelativeLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_color"/>

    <LinearLayout
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:paddingLeft="19dp"
        android:paddingRight="19dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:text="@string/account_input"
                android:textSize="15sp"
                android:textColor="#333333"/>

            <EditText
                android:id="@+id/account_passwd_et"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:hint="@string/account_input_title"
                android:gravity="right|center"
                android:textSize="15sp"
                android:textColor="#333333"
                android:inputType="textPassword"
                android:maxLines="1" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_color"/>

    <LinearLayout
        android:id="@+id/second_passwd_ll"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:paddingLeft="19dp"
        android:paddingRight="19dp"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:text="@string/secondary_password"
                android:textSize="15sp"
                android:textColor="#333333"/>

            <EditText
                android:id="@+id/second_passwd_et"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:hint="@string/input_secondary_password"
                android:gravity="right|center"
                android:textSize="15sp"
                android:textColor="#333333"
                android:inputType="textPassword"
                android:maxLines="1" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_color"/>
    <LinearLayout
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:paddingLeft="19dp"
        android:paddingRight="19dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:text="@string/lock_fee"
            android:textSize="15sp"
            android:textColor="#333333"/>

        <TextView
            android:id="@+id/lock_fee_tv"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:text="@string/account_input_title"
            android:gravity="right|center"
            android:textSize="15sp"
            android:textColor="#999999"
            android:maxLines="1" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_color"/>

    <Button
        android:id="@+id/ok_btn"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="40dp"
        style="@style/PrimaryButton.Style"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:text="@string/locked" />

</LinearLayout>

