<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            >
            <LinearLayout
                android:id="@+id/avatar_ll"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical|left"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/lmi_avatar"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:contentDescription="@string/app_name"
                    android:src="@mipmap/icon_cctime"
                    tools:background="#fff0f0f0"/>
            </LinearLayout>

            <LinearLayout
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/avatar_ll"
                android:layout_toLeftOf="@+id/right_ll"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical|left"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/name_tv"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:text="xxx"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="0dp"
                    tools:background="#fff0f0f0"/>
                <TextView
                    android:id="@+id/description_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textSize="12sp"
                    android:text="xxx"
                    android:textColor="#8b8b8e"
                    android:layout_marginTop="2dp"
                    tools:background="#fff0f0f0"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/right_ll"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical|right"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <asch.io.widget.statebutton.StateButton
                    android:id="@+id/deposit_btn"
                    android:layout_marginTop="2dp"
                    android:layout_width="68dp"
                    android:layout_height="22dp"
                    android:textSize="10sp"
                    android:text="@string/deposit"
                    android:padding="0dp"
                    app:sb_radius="12dp"
                    app:round="true"
                    app:animationDuration="200"
                    app:normalTextColor="#FFFFFF"
                    app:normalBackgroundColor="@color/button_bg_nor"
                    />
                <!--<asch.so.widget.downloadbutton.DownloadProgressButton-->
                    <!--android:id="@+id/download_btn"-->

                    <!--android:layout_marginBottom="2dp"-->
                    <!--android:layout_width="70dp"-->
                    <!--android:layout_height="24dp"-->
                    <!--android:padding="0dp"-->
                    <!--android:textSize="12sp"-->
                    <!--app:progress_btn_ball_style="STYLE_BALL_PULSE"-->
                    <!--app:progress_btn_border_width="2dp" />-->
                <asch.io.widget.statebutton.StateButton
                    android:id="@+id/balance_btn"
                    android:layout_marginTop="2dp"
                    android:layout_width="68dp"
                    android:layout_height="22dp"
                    android:textSize="10sp"
                    android:text="@string/dapp_balance_detail"
                    android:padding="0dp"
                    app:sb_radius="12dp"
                    app:round="true"
                    app:animationDuration="200"
                    app:normalTextColor="#FFFFFF"
                    app:normalBackgroundColor="@color/button_bg_nor"
                    />
            </LinearLayout>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/divider_color"
            />

        <LinearLayout
            android:background="@android:color/white"
            android:layout_marginTop="0dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="44dp">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:textStyle="normal"
                        android:textSize="18sp"
                        android:text="@string/dapp_info"
                        />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="44dp">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="43dp">
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#333333"
                        android:textSize="15sp"
                        android:text="@string/dapp_price"
                        />
                    <TextView
                        android:id="@+id/tx_id_tv"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#999999"
                        android:textSize="13sp"
                        android:gravity="right"
                        android:text="@string/dapp_free"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider_color"
                    />
            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="44dp">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="43dp">
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#333333"
                        android:textSize="15sp"
                        android:text="@string/dapp_size"
                        />
                    <TextView
                        android:id="@+id/tx_type_tv"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#999999"
                        android:textSize="13sp"
                        android:gravity="right"
                        android:text="16.4MB"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider_color"
                    />
            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="44dp">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="43dp">
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#333333"
                        android:textSize="15sp"
                        android:text="@string/dapp_datetime"
                        />
                    <TextView
                        android:id="@+id/tx_date_tv"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#999999"
                        android:textSize="13sp"
                        android:gravity="right"
                        android:text="2018-2-13"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider_color"
                    />
            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="44dp">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="43dp">
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#333333"
                        android:textSize="15sp"
                        android:text="@string/dapp_verion"
                        />
                    <TextView
                        android:id="@+id/tx_sender_tv"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#999999"
                        android:textSize="13sp"
                        android:gravity="right"
                        android:text="1.0.0"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider_color"
                    />
            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="44dp">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="43dp">
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#333333"
                        android:textSize="15sp"
                        android:text="@string/dapp_developer"
                        />
                    <TextView
                        android:id="@+id/tx_receive_tv"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#2884F1"
                        android:textSize="13sp"
                        android:gravity="right"
                        android:text="@string/asch_company_name"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider_color"
                    />
            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="53dp">
                <TextView
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textStyle="normal"
                    android:textSize="18sp"
                    android:text="@string/dapp_des"
                    />
            </LinearLayout>

            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/dapp_des_tv"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#999999"
                        android:textSize="13sp"
                        android:gravity="left"
                        android:text="@string/dapp_des_content"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:visibility="gone"
                    android:background="@color/divider_color"
                    />
            </LinearLayout>
            <asch.io.widget.downloadbutton.DownloadProgressButton
                android:id="@+id/download_btn"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:padding="0dp"
                android:textColor="#FFFFFF"
                app:progress_btn_radius="2dp"
                app:progress_btn_ball_style="STYLE_BALL_PULSE"
                app:progress_btn_border_width="2dp" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"></FrameLayout>
    </LinearLayout>
</ScrollView>
