<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    >
    <LinearLayout
        android:id="@+id/avatar_ll"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical|left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">
    <ImageView
        android:id="@+id/lmi_avatar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="@string/app_name"
        android:src="@mipmap/icon_cctime"
        tools:background="#fff0f0f0"/>
    </LinearLayout>

    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/avatar_ll"
        android:layout_toLeftOf="@+id/right_ll"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical|left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name_tv"
            android:textColor="#000000"
            android:textSize="18sp"
            android:text="xxx"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="0dp"
            tools:background="#fff0f0f0"/>
        <TextView
            android:id="@+id/description_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textSize="12sp"
            android:text="xxx"
            android:textColor="#8b8b8e"
            android:layout_marginTop="2dp"
            tools:background="#fff0f0f0"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/right_ll"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical|right"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <asch.io.widget.downloadbutton.DownloadProgressButton
            android:id="@+id/download_btn"
            android:layout_marginBottom="2dp"
            android:layout_width="70dp"
            android:layout_height="24dp"
            android:padding="0dp"
            android:textSize="12sp"
            app:progress_btn_ball_style="STYLE_BALL_PULSE"
            app:progress_btn_border_width="2dp" />
         <asch.io.widget.statebutton.StateButton
             android:id="@+id/delete_btn"
             android:visibility="gone"
             android:layout_marginTop="2dp"
             android:layout_width="68dp"
             android:layout_height="22dp"
             android:textSize="10sp"
             android:text="@string/delete"
             android:padding="0dp"
             app:sb_radius="12dp"
             app:round="true"
             app:animationDuration="200"
             app:normalTextColor="#949494"
             app:normalBackgroundColor="#f1f0f6"
             />
    </LinearLayout>

</RelativeLayout>
