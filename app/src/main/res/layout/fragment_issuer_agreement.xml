<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <WebView
        android:id="@+id/issuer_agreement_wv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/agreement_line"
        android:layout_alignParentTop="true">
    </WebView>



    <View
        android:id="@+id/agreement_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_color"
        android:layout_alignTop="@+id/layout_agreement_btn"/>

    <LinearLayout
        android:id="@+id/layout_agreement_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/agreement_deny"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@color/dark_gray"
            android:gravity="center"
            android:text="@string/deny"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/agreement_agree"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@color/button_blue"
            android:gravity="center"
            android:text="@string/i_agree"
            android:textColor="@color/white" />
    </LinearLayout>

</RelativeLayout>
