<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2">
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="asch.so.wallet.view.fragment.AssetBalanceFragment">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:fitsSystemWindows="true"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:background="@drawable/toolbar"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">
            <ImageView
                android:id="@+id/parallax"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/asset_header_bg"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.7"
                android:fitsSystemWindows="true"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"></LinearLayout>
            <LinearLayout
                android:id="@+id/materialup.title_container"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13.33dp"
                android:fitsSystemWindows="true"
                app:layout_collapseMode="parallax"
                android:orientation="horizontal"
                android:paddingTop="8dp"
                android:gravity="left|center_vertical"
                >
                <!--app:civ_border_color="@color/white"-->
                <!--app:civ_border_width="2dp"-->
                <ImageView
                    android:id="@+id/ident_icon"
                    android:padding="1dp"
                    android:scaleType="centerInside"
                    android:background="@drawable/square_bg"
                    android:layout_width="@dimen/head_coin_size"
                    android:layout_height="@dimen/head_coin_size"
                    android:layout_margin="8dp"
                    android:src="@mipmap/default_avatar"
                    />
                ​<LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                    android:text=""
                    android:textSize="18sp"
                    />
                ​
                <Button
                    android:id="@+id/backup_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:gravity="center"
                    android:background="@drawable/backup_bg"
                    android:text="@string/please_backup"
                    android:visibility="gone"
                    android:textSize="10sp"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    />
            </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    ​<ImageView
                    android:id="@+id/add_btn"
                    android:cropToPadding="false"
                    android:layout_width="36dp"
                    android:layout_height="56dp"
                    android:layout_marginRight="20dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:clickable="true"
                    android:visibility="visible"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center|right"
                    android:src="@mipmap/more_menu_icon"
                    />
                </LinearLayout>
            </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:paddingLeft="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/xas_balance_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="32sp"
                        android:text="0"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:text="@string/xas_balance"
                        />
                </LinearLayout>
            </LinearLayout>
            <asch.so.widget.toolbar.TitleToolbar
                android:id="@+id/toolbar_in"
                android:layout_width="match_parent"
                android:layout_height="@dimen/toolBarHeight"
                android:background="@android:color/transparent"
                android:paddingTop="@dimen/toolBarPaddingTop"
                app:backIcon="@mipmap/back"
                app:backText="@string/back"
                app:backTextAppearance="?attr/actionMenuTextAppearance"
                app:backTextColor="@android:color/white"
                app:backVisible="false"
                app:closeText="@string/close"
                app:closeTextAppearance="?attr/actionMenuTextAppearance"
                app:closeTextColor="@android:color/white"
                app:closeVisible="false"
                app:subtitle=""
                app:subtitleTextAppearance="@style/Subtitle_Appearance"
                app:subtitleVisible="false"
                app:title=""
                app:titleTextAppearance="@style/Title_Appearance"
                app:titleTextColor="@android:color/white"
                app:title_gravity="center" >
            </asch.so.widget.toolbar.TitleToolbar>
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:srlPrimaryColor="@color/colorPrimary"
        app:srlAccentColor="@android:color/white"
        app:srlEnableLoadmore="false">
        <com.scwang.smartrefresh.header.MaterialHeader
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <!--<ezy.ui.layout.LoadingLayout-->
            <!--android:id="@+id/loading_ll"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--app:llLoadingResId="@layout/common_loading"-->
            <!--app:llEmptyImage="@drawable/ic_empty"-->
            <!--app:llErrorImage="@drawable/ic_error"-->
            <!--&gt;-->
        <android.support.v7.widget.RecyclerView
            android:id="@+id/assets_rcv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:choiceMode="singleChoice"
            android:divider="@android:color/transparent"
            android:dividerHeight="0dp"
            android:layout_alignParentTop="true"
            />
        <!--</ezy.ui.layout.LoadingLayout>-->
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</android.support.design.widget.CoordinatorLayout>
    <asch.so.widget.toolbar.TitleToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolBarHeight"
        android:background="@drawable/toolbar"
        android:paddingTop="@dimen/toolBarPaddingTop"
        android:visibility="visible"
        app:backIcon="@mipmap/back"
        app:backText="@string/back"
        app:backTextAppearance="?attr/actionMenuTextAppearance"
        app:backTextColor="@android:color/white"
        app:backVisible="false"
        app:closeText="@string/close"
        app:closeTextAppearance="?attr/actionMenuTextAppearance"
        app:closeTextColor="@android:color/white"
        app:closeVisible="false"
        app:subtitle=""
        app:subtitleTextAppearance="@style/Subtitle_Appearance"
        app:subtitleVisible="false"
        app:title=""
        app:titleTextAppearance="@style/Title_Appearance"
        app:titleTextColor="@android:color/white"
        app:title_gravity="center"
        app:rightText=""
        app:rightTextAppearance="?attr/actionMenuTextAppearance"
        app:rightTextColor="@android:color/white"
        app:rightVisible="false"
        >
        <android.support.v7.widget.ButtonBarLayout
            android:id="@+id/balance_bbl"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingTop="0dp"
            android:gravity="left|center_vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/top_balance_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:visibility="visible"
                android:gravity="center_vertical"
                android:textSize="15sp"
                android:text=""
                android:layout_gravity="center_vertical"
                />
        </android.support.v7.widget.ButtonBarLayout>
        <ImageView
            android:id="@+id/add_icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:cropToPadding="false"
            android:layout_marginRight="20dp"
            android:padding="6dp"
            android:visibility="visible"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical|right"
            android:src="@mipmap/more_menu_icon"
            />
    </asch.so.widget.toolbar.TitleToolbar>
</FrameLayout>

