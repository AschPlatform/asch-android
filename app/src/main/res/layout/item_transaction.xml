<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    >

    <ImageView
        android:id="@+id/transfer_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@mipmap/transfer_in_icon"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:id="@+id/transactionid_tv"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/transfer_icon"
        android:singleLine="true"
        android:ellipsize="middle"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textColor="#333333"
        android:textSize="12sp"
        android:text="XAS"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true">


        <TextView
            android:id="@+id/amount_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:maxLines="1"
            android:textSize="12sp"
            android:textStyle="bold"
            android:text="+889"
            />
        <TextView
            android:visibility="gone"
            android:id="@+id/transaction_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_marginTop="5dp"
            android:textColor="@color/dark_gray"
            android:text="@string/transaction_fee"
            />
    </LinearLayout>


    <TextView
        android:id="@+id/date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/transfer_icon"
        android:layout_alignLeft="@+id/transactionid_tv"
        android:maxLines="1"
        android:text="2017-11-16"
        android:textColor="#333333"
        android:textSize="12sp" />
</RelativeLayout>

