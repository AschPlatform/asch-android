<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:background="@color/page_bg"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <EditText
        android:id="@+id/seed_et"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:singleLine="false"
        android:visibility="gone"
        android:text="spatial slush action typical emerge feature confirm edge game desk orphan burst" />

    <LinearLayout
        android:layout_marginTop="20dp"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:orientation="vertical"
        android:gravity="center_vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/passwd_et"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_toLeftOf="@id/eye_1"
                android:background="@null"
                android:hint="@string/wallet_pwd"
                android:inputType="textPassword"
                android:maxLines="1"
                android:textColor="#333333"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/eye_1"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:padding="10dp"
                android:src="@mipmap/icon_xians"
                android:layout_toLeftOf="@id/clear_1"
                android:layout_centerVertical="true"/>
            <ImageView
                android:id="@+id/clear_1"
                android:layout_alignParentRight="true"
                android:padding="10dp"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:src="@mipmap/icon_delet"
                android:layout_centerVertical="true"/>
            
        </RelativeLayout>
        
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="10dp"
            android:background="@color/divider_color"
            />
    </LinearLayout>

    <LinearLayout
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:orientation="vertical"
        android:gravity="center_vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/passwd_et2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_toLeftOf="@id/eye_2"
                android:background="@null"
                android:hint="@string/ensure_wallet_pwd"
                android:inputType="textPassword"
                android:maxLines="1"
                android:textColor="#333333"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/eye_2"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:padding="10dp"
                android:src="@mipmap/icon_xians"
                android:layout_toLeftOf="@id/clear_2"
                android:layout_centerVertical="true"/>
            <ImageView
                android:id="@+id/clear_2"
                android:layout_alignParentRight="true"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:padding="10dp"
                android:src="@mipmap/icon_delet"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/set_password_info"
        android:textColor="#FF999999"
        android:textSize="10sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        />


    <Button
        android:id="@+id/create_btn"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        style="@style/PrimaryButton.Style"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:text="@string/set" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:text="@string/remark_hint"
        android:textColor="#888888"
        android:textSize="10sp" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="300dp">

    </FrameLayout>
</LinearLayout>
</ScrollView>